---
interface Props {
	id?: string;
	class?: string;
	value?: number;
}
const { id, class: class_, value } = Astro.props;
---

<input
	{id}
	class={class_}
	{value}
	type="number"
	inputmode="decimal"
	min="0"
	max="1"
	step="0.01"
/>

<style>
	input {
		display: block;
		position: relative;
		width: 3.5em;
		font-size: 1.3rem;
		padding: 0.25em;
		background-color: #222;
		color: white;
		border: 1px solid white;
		border-radius: 5px;
	}

	input.below {
		margin-top: 0.5rem;
	}
</style>
